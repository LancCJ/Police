<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="nav_text_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="nav_Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing_small</item>
        <item name="android:paddingBottom">@dimen/nav_header_vertical_spacing_small</item>
        <item name="android:paddingLeft">@dimen/nav_header_vertical_spacing</item>
        <item name="android:paddingRight">@dimen/nav_header_vertical_spacing</item>
        <item name="android:background">@drawable/drawable_default_selector</item>
    </style>
</resources>
